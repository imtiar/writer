<div class="container">
  <div class = "header">
    <a id = "daimei">Okogoto</a>

    <b id="my-words-link" style"margin:10px;">
        <%= link_to '皆の小言', words_path %>
    </b>

    <% if current_user %>
      <b id="user-edit-link">
        <%= link_to 'プロフィール設定', edit_user_registration_path %>
      </b>
    <% end %>
    
    <% if current_user %>
      <b id="signin-link">
        <%= link_to 'サインアウト', destroy_user_session_path, method: :delete, data: {confirm: 'roguauto simasuka?'}%>
      </b>
    <% else %>
      <b id="signin-link">
        <%= link_to 'サインイン', new_user_session_path%>
      </b>
    <% end %>
  </div>

  <div id="new-word-link">
    <%= link_to '新規投稿', new_word_path, class: "btn btn-default border" %>
  </div>

  <div class="row">
    <% @my_words.each do |word| %> 
      <%= render :partial => "my_words", :locals => { word: word } %>
    <% end %>
  </div>

</div>
