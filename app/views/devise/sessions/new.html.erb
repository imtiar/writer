<div class = "container">
  <div class = "header">
    <a id = "daimei">Okogoto</a>

    <b id="my-words-link" style"margin:10px;">
        <%= link_to '皆の小言', words_path %>
    </b>

    <% if current_user %>
      <b id="user-edit-link">
        <%= link_to 'プロフィール設定', edit_user_registration_path %>
      </b>
    <% end %>

    <% if current_user %>
      <b id="signin-link">
        <%= link_to 'サインアウト', destroy_user_session_path, method: :delete, data: {confirm: 'roguauto simasuka?'}%>
      </b>
    <% else %>
      <b id="signin-link">
        <%= link_to 'サインイン', new_user_session_path%>
      </b>
    <% end %>
  </div>


  <br>
  <h6>You need to sign in or sign up before continueing. </h6>
  <br>
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "100x50" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", size: "100x50" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
