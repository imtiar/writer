<div class="container">
  <div class = "header">
    <a id = "daimei">Okogoto</a>

    <b id="my-words-link" style"margin:10px;">
        <%= link_to '皆の小言', words_path %>
    </b>

    <% if current_user %>
      <b id="user-edit-link">
        <%= link_to 'プロフィール設定', edit_user_registration_path %>
      </b>
    <% end %>

    <% if current_user %>
      <b id="signin-link">
        <%= link_to 'サインアウト', destroy_user_session_path, method: :delete, data: {confirm: 'roguauto simasuka?'}%>
      </b>
    <% else %>
      <b id="signin-link">
        <%= link_to 'サインイン', new_user_session_path%>
      </b>
    <% end %>
  </div>

  <br>

  <h2>ユーザー設定</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, size: "100x50" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "100x50" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", size: "100x50" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "100x50" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", size: "100x50" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "ユーザー情報を更新する", class:"btn button" %>
    </div>
  <% end %>

  <br>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>
